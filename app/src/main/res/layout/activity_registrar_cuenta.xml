<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.GreenQuest"
    app:circularflow_radiusInDP="80">
    <include layout="@layout/activity_adapter" />

    <TextView
        android:id="@+id/registrar_cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="@string/label_registrar_cuenta"
        android:textColor="@color/texto_normal"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descripcion_bienvenida"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/bienvenido_registrar_cuenta"
        android:textAlignment="center"
        android:textColor="@color/texto_secundario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registrar_cuenta" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@color/fondo_secundario"
        app:cardCornerRadius="16dp"

        app:layout_constraintWidth_percent="0.9"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcion_bienvenida"
        app:layout_constraintVertical_bias="0.244">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fondo_secundario"
            android:orientation="vertical"
            android:padding="24dp">


            <TextView
                android:id="@+id/registro_label_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="@string/email_text"
                android:textSize="16dp"
                android:textColor="@color/texto_normal"/>

            <EditText
                android:id="@+id/registro_email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:background="@drawable/edittext"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:textSize="24dp"
                android:textColor="@color/texto_normal"
                android:textColorHint="@color/texto_normal"/>

            <TextView
                android:id="@+id/registro_label_contrasenia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textColor="@color/texto_normal"
                android:text="@string/password_text"
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/registro_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textColor="@color/texto_normal"
                android:background="@drawable/edittext"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:textSize="24dp"
                android:textColorHint="@color/texto_normal"/>

            <TextView
                android:id="@+id/registro_repeat_password_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textColor="@color/texto_normal"
                android:text="@string/label_repita_restablecer_contrasenia"
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/registro_repeat_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textColor="@color/texto_normal"
                android:background="@drawable/edittext"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:textSize="24dp"
                android:textColorHint="@color/texto_normal"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center" >

                <Button
                    android:id="@+id/cancelar_registro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="@color/acento_de_fondo"
                    android:textColor="@color/texto_oscuro"
                    android:text="@string/cancel" />

                <Button
                    android:id="@+id/registrar_cuenta_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="@color/accent_color"
                    android:text="@string/login_button" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>



<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.camera.view.PreviewView
        android:id="@+id/qr_camara"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scaleType="fillCenter" />

    <TextView
        android:id="@+id/qr_mensaje_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:minHeight="40dp"
        android:gravity="center"
        android:textColor="@color/texto_oscuro"
        android:background="@color/texto_rojo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible"
        tools:text="Mensaje de error correspondiente"
        tools:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_hint_qr" />

    <TextView
        android:id="@+id/label_hint_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/hint_scan_qr"
        android:textColor="@color/texto_normal"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/qr_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/qr_scanner_overlay"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qr_button_scan"
        android:gravity="center"
        android:text="@string/button_escanear_qr"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@+id/qr_overlay"
        android:textColor="@color/texto_oscuro"
        android:background="@color/accent_color"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >


    </Button>



</androidx.constraintlayout.widget.ConstraintLayout>
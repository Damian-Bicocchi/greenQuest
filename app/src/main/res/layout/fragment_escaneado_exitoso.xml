<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">



    <TextView
        android:id="@+id/qr_mensaje_felicidades"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="29dp"
        android:minHeight="40dp"
        android:gravity="center"
        android:textColor="@color/texto_oscuro"
        android:background="@color/texto_verde"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible"
        tools:text="Â¡Felicidades! Sumaste N puntos"
        tools:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/acento_de_fondo"
        app:layout_constraintTop_toBottomOf="@id/qr_mensaje_felicidades"
        android:id="@+id/layout_centro_denunciar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:id="@+id/label_resumen_residuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Reciclaste: "
            android:textColor="@color/texto_normal"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/button_denunciar_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/acento_de_fondo"
            android:textColor="@color/texto_oscuro"
            android:text="@string/button_denunciar_categoria"
            app:layout_constraintTop_toBottomOf="@id/label_resumen_residuo"
            android:paddingBottom="2sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/accent_color"
            android:textColor="@color/texto_oscuro"
            android:text="@string/button_continuar"
            app:layout_constraintTop_toBottomOf="@id/button_denunciar_categoria"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>








</androidx.constraintlayout.widget.ConstraintLayout>